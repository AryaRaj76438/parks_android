<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_details"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context="com.example.parks.DetailsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp"
        android:paddingBottom="32dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/details_park_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="TextView"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/details_park_designation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="TextView"
                android:textSize="18sp" />

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/details_view_pager"
                android:layout_width="match_parent"
                android:layout_height="225dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/textView6"
                android:text="Description"
                style="@style/general_item_format" />

            <TextView
                android:id="@+id/details_description"
                android:text="TextView"
                style="@style/detail_frg_content" />

            <TextView
                android:id="@+id/textView8"
                style="@style/general_item_format"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Activities" />

            <TextView
                android:id="@+id/details_activities"
                style="@style/detail_frg_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />

            <TextView
                android:id="@+id/textView10"
                style="@style/general_item_format"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Topics" />

            <TextView
                android:id="@+id/details_topics"
                style="@style/detail_frg_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />

            <TextView
                android:id="@+id/textView13"
                style="@style/general_item_format"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Entrance Fees" />

            <TextView
                android:id="@+id/details_entrance_fees"
                style="@style/detail_frg_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />

            <TextView
                android:id="@+id/textView18"
                style="@style/general_item_format"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Operating Hours" />

            <TextView
                android:id="@+id/details_operating_hours"
                style="@style/detail_frg_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />

            <TextView
                android:id="@+id/textView16"
                style="@style/general_item_format"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Directions" />

            <TextView
                android:id="@+id/details_directions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />
        </LinearLayout>
    </ScrollView>


</LinearLayout>